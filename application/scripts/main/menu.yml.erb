- :message:
    :value: Welcome to RubyRPG <%= version %>
    :color: red

- :options:
    :values:
      - New Game
      - Load Game
      - Exit

- :jump_to: start_new_game
- :jump_to: load_game
- :jump_to: exit_game

- :label: start_new_game
- :system: clear
- :transfer:
    :controller: main
    :action: new_game

- :label: load_game
- :transfer:
    :controller: main
    :action: load_game

- :label: exit_game
- :message:
    :value: Exit Game
    :color: red
- :system: exit
